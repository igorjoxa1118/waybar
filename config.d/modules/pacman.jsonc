{
    "custom/pacman": {
        "format": " {}",
        "interval": 7200,
        "exec": "i=$(checkupdates); echo \"$i\" | wc -l; echo \"$i\" | column -t | tr '\n' '\r'",
        "exec-if": "which checkupdates",  // Проверяем, что checkupdates установлен
        "on-click": "kitty -e sudo pacman -Syu",
        "signal": 8
    }
}